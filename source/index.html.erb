---
title: Middleman exo - Airbnb v2
---

  <div class="home">
    <!-- navbar is a component added in layout -->

    <!-- banner -->
    <div class="banner" style="background: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/paris');">
      <div class="banner-content">
        <h1>WELCOME HOME</h1>
        <p>Rent unique places to stay from local hosts in 190+ countries.</p>
        <form action="#" class="form-inline">
          <input type="text" placeholder="Where?" class="form-control input-lg">
          <input type="text" placeholder="When?" class="form-control input-lg">
          <select name = "" id="mon-select" class= "form-control input-lg">
            <option value = "">1 guest</option>
            <option value = "">2 guests</option>
            <option value="">3 guests</option>
          </select>
          <input type="submit" value="Search" class="btn btn-primary btn-lg">
        </form>
      </div>
    </div>

    <!-- cards -->
    <div class="container">
      <div class="cards">
      <h3 class="text-center">Recent flats</h3>
        <div class="row">
          <% flats = [
              {
                name: "Seb's",
                nickname: "ssaunier",
                city: "PARIS",
                country: "FRANCE",
                tagline: "Charming room in Montmartre",
                stars: 4,
               },
              {
                name: "Boris'",
                nickname: "papillard",
                city: "TOKYO",
                country: "JAPON",
                tagline: "Small flat in Tokyo",
                stars: 3
                },
              {
                name: "Romain's",
                nickname: "monsieurpaillard",
                city: "LONDON",
                country: "UK",
                tagline: "Nice flat in Picadilly",
                stars: 5
              }
          ] %>

          <% flats.each do |flat| %>
            <div class="col-xs-12 col-sm-4">
              <div class="card">
                  <div class="card-body" style="background-image:  linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.2) 100%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat[:city].downcase%>')">
                    <div class="card-category"><%= flat[:city].upcase %>, <%= flat[:country].upcase %></div>
                    <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{flat[:nickname]}", class: "card-avatar" %>
                    <div class="card-desc">
                      <h4><%= flat[:name] %> home</h4>
                      <p><%= flat[:tagline] %></p>
                      <ul class="list-inline">
                        <% flat[:stars].times do %>
                          <li><i class="fa fa-star yellow"></i></li>
                        <% end %>
                        <% (5-flat[:stars]).times do %>
                          <li><i class="fa fa-star grey"></i></li>
                        <% end %>
                      </ul>
                    </div>
                    <div class="card-link">
                      <a href="#"></a>
                    </div>
                  </div>
              </div>
            </div>

          <% end %>

        </div>
      </div>
    </div>

    <!-- footer is a component added in layout -->
  </div>

